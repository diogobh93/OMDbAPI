<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/posters"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/bannerfilmes" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/filmeid"
        android:layout_width="291dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/pesquisar"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="@string/nomedofilme"
        android:inputType="textAutoCorrect|textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/botaoid"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filmeid"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/botao"
        android:text="@string/btnpesquisar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>